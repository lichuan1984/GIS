<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <ProgressBar
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/cardview_shadow_start_color"
            android:id="@+id/progressBar" android:layout_gravity="right|top" android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="499dp"
            app:srcCompat="@drawable/ic_home_bg"
            android:id="@+id/imageView" android:layout_gravity="center|fill_horizontal|fill_vertical"
            android:paddingBottom="80dp"/>
    <TextView
            android:id="@+id/textView"
            android:text="LKJ系统 v1.0"
            android:textSize="18sp"
            android:fontFamily=""
            android:textColor="#000000"
            android:layout_gravity="bottom|clip_horizontal|center"
            android:textAlignment="center" android:layout_marginBottom="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textStyle="normal"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>